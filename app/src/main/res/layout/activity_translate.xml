<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Translate">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/barr"
        android:layout_width="match_parent"
        android:layout_height="298dp"
        android:background="#00FFFFFF"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.Notes">

        <com.google.android.material.appbar.CollapsingToolbarLayout

            android:id="@+id/collapsing_toolbarr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="right"
            app:contentScrim="@color/white100"
            app:expandedTitleMarginTop="266dp"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:title="حفظ">

            <TextView
                android:id="@+id/texevew22"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:layout_marginTop="137dp"
                android:background="#007E91AF"
                android:gravity="center"
                android:onClick="menuee"
                android:text="ترجمه الي اللغة الانجليزيه "
                android:textColor="@color/main2textvew2"
                app:layout_collapseMode="parallax" />

            <EditText
                android:id="@+id/texevew1"
                android:layout_width="match_parent"
                android:layout_height="106dp"
                android:layout_marginTop="30dp"
                android:background="#007E91AF"
                android:gravity="center"
                android:hint="إضغط للترجمه"
                android:padding="14dp"
                android:textColor="@color/main1title"
                android:textColorHint="@color/hint2"
                android:textSize="24dp"
                app:layout_collapseMode="parallax" />

            <EditText
                android:id="@+id/text11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="170dp"
                android:background="#007E91AF"
                android:gravity="center"
                android:padding="14dp"
                android:textColor="#346AC2"
                android:textSize="20dp"
                app:layout_collapseMode="parallax" />

            <Button
                android:id="@+id/buttoncv"
                android:layout_width="60dp"
                android:layout_height="69dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="225dp"
                android:onClick="btn_savee"
                android:text="حفظ"
                android:textColor="@color/buttontextcolor"
                android:textSize="14sp"
                app:backgroundTint="@color/buttoncolor"
                app:cornerRadius="90dp" />

            <Button
                android:id="@+id/button"
                android:layout_width="60dp"
                android:layout_height="69dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="225dp"
                android:onClick="btn_savee"
                android:text="ترجمه"
                android:textColor="@color/buttontextcolor"
                android:textSize="13sp"
                app:backgroundTint="@color/buttoncolor"
                app:cornerRadius="90dp" />
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="110dp"
                android:layout_marginRight="174dp"
                android:onClick="btn_main"
                android:background="@drawable/arrowback"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed" />

            <ImageButton
                android:id="@+id/buttonv"
                android:layout_width="30dp"
                android:layout_height="28dp"
                android:layout_marginTop="240dp"
                android:onClick="menuee2"
                android:layout_marginRight="5dp"
                android:background="@drawable/ic_baseline_more_vert_24"
                android:textColor="#20262F"
                android:textSize="16dp"
                app:cornerRadius="90dp"/>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/nested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_anchorGravity="center_horizontal"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>