<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white100"
    tools:context=".Book">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:background="@color/white100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/textt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:autoLink="all|web|phone|email"
                android:background="#00AF7E7E"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:linksClickable="true"
                android:longClickable="true"
                android:padding="14dp"
                android:paddingTop="200dp"
                android:textColor="@color/textbook"
                android:textColorLink="#213FF4"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/buttonvm"
        android:layout_width="29dp"
        android:layout_height="27dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/ic_baseline_more_vert_24"
        android:onClick="menuee_book"
        android:textColor="#20262F"
        android:textSize="16dp"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/buttonvsearsh"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="45dp"
        android:background="@drawable/sersh"
        android:onClick="menuee_book"
        android:textColor="#20262F"
        android:textSize="16dp"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/icontitle"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="370dp"
        android:background="@drawable/ic_baseline_arrow_forward_ios_24"
        android:textColor="#20262F"
        android:textSize="16dp"
        android:onClick="back"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/buttoncopy"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/imagecopy"
        android:onClick="copy"
        android:textColor="#20262F"
        android:textSize="16dp"
        app:cornerRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="0.05dp"
        android:layout_marginTop="55dp"
        android:background="@color/row1title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textView2"
        android:layout_width="240dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:background="@color/white100"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" /><![CDATA[



        android:text="Button" />


]]>
</androidx.constraintlayout.widget.ConstraintLayout>